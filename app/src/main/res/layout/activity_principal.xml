<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header com nome do usuário e ícones -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            >

            <LinearLayout
                android:id="@+id/layout_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_constraintStart_toStartOf="parent"
                android:layout_constraintTop_toTopOf="parent"
                android:layout_constraintBottom_toBottomOf="parent"
                android:layout_constraintEnd_toStartOf="@+id/layout_icons"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/txt_boas_vindas"
                    android:style="@style/Sub_TitlesTitles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boa tarde,"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_usuario"
                    style="@style/tTitles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esterzinha"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_constraintEnd_toEndOf="parent"
                android:layout_constraintTop_toTopOf="parent"
                android:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/profile_icon"
                    android:contentDescription="Ícone de perfil"
                    android:backgroundTint="@color/secundary"
                    android:padding="4dp"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="Configurações" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Cartão de saldo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:cardCornerRadius="16dp"
            android:cardElevation="4dp"
            android:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo atual"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 5.000,00"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Botões dentro do cartão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/btnEntrada"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Entrada"
                        android:backgroundTint="@color/add"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnDespesas"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Despesas"
                        android:backgroundTint="@color/remove"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Seção de Resumo Cripto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumo Cripto"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txt_resumo_cripto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="R$ 5.000,00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnExibirCripto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exibir"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white" />
        </LinearLayout>


        <!-- Seção de Mercado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercado"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="2dp"
            android:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 498.269,69"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Gráfico -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/sample_graph"
                    android:scaleType="fitXY"
                    android:layout_marginTop="12dp"
                    android:contentDescription="Gráfico de mercado" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Botões ADICIONAR e RETIRAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAdicionar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ADICIONAR"
                android:backgroundTint="@color/add"
                android:textColor="@color/white" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRetirar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="RETIRAR"
                android:backgroundTint="@color/remove"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
