<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/tela_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cartão de saldo -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_top_bar"
            android:backgroundTint="@color/bg"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/header_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Header com nome do usuário e ícones -->
                <LinearLayout
                    android:id="@+id/header_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp">

                        <!-- Saudação e nome alinhados à esquerda -->
                        <LinearLayout
                            android:id="@+id/layout_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="4dp"
                          >

                            <TextView
                                style="@style/sub_titles"
                                android:id="@+id/txt_boas_vindas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Boa tarde,"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/txt_usuario"
                                style="@style/titles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[usuario]"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Ícones alinhados à direita -->
                        <LinearLayout
                            android:id="@+id/header_icons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="160dp"
                            app:layout_constraintStart_toEndOf="@+id/layout_user"
                            tools:layout_editor_absoluteY="9dp"
                            tools:ignore="MissingConstraints">

                            <ImageView
                                android:id="@+id/ivProfile"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/icon_bg"
                                android:backgroundTint="@color/secundary"
                                android:clipToOutline="true"
                                android:contentDescription="Ícone de perfil"
                                android:outlineProvider="background"
                                android:padding="10dp"
                                android:src="@drawable/profile_icon"
                                app:layout_constraintEnd_toStartOf="@+id/btnNottification"
                                tools:layout_editor_absoluteY="17dp" />

                            <ImageView
                                android:id="@+id/ivNottification"
                                android:layout_width="40dp"
                                android:layout_height="40dp"

                                android:background="@drawable/icon_bg"
                                android:contentDescription="Configurações"
                                android:padding="10dp"
                                android:src="@drawable/notification_icon"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:layout_editor_absoluteY="16dp" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- Saldo Total -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_card"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_card"
                    android:backgroundTint="@color/primary"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/infos_saldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                        <TextView
                            android:id="@+id/saldo_title"
                            style="@style/sub_titles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saldo atual"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/saldo_values"
                            style="@style/titles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 5.000,00"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Botões dentro do cartão -->
                <LinearLayout
                    android:id="@+id/card_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Valor de entrada -->
                    <LinearLayout
                        android:id="@+id/entry_values"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttons"
                        android:backgroundTint="@color/white_overlay"
                        android:paddingHorizontal="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/entry_values_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttons"
                            android:backgroundTint="@color/add"
                            app:tint="@color/success"
                            android:padding="5dp"
                            android:src="@drawable/baseline_add" />

                        <Button
                            android:id="@+id/entry_values_txt"
                            style="@style/sub_titles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#00FFFFFF"
                            android:text="[R$000,00]"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <!-- Botão pra alterar filtro -->
                    <LinearLayout
                        android:id="@+id/entry_values_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttons"
                        android:backgroundTint="@color/white_overlay"
                        android:paddingHorizontal="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/entry_values_filter_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttons"
                            android:backgroundTint="@color/primary"
                            app:tint="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/baseline_arrow_down" />


                        <Button
                            android:id="@+id/entry_values_filter_txt"
                            style="@style/main_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:text="Última semana"
                            android:textAllCaps="false"
                            android:textColor="@color/primary" />

                    </LinearLayout>


                </LinearLayout>


                <!-- Bancos
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBancos"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>
                    -->


                <LinearLayout
                    android:id="@+id/banks_list"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:scrollbarTrackHorizontal="@color/primary">

                    <LinearLayout
                        android:id="@+id/bank_card"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_bg"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/bank_head"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_bg"
                            android:backgroundTint="@color/success"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/bank_head_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/paper_money"
                                app:tint="@color/black"
                                android:layout_gravity="center"
                                android:paddingEnd="5dp"/>

                            <TextView
                                android:id="@+id/bank_head_name"
                                style="@style/main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dinheiro"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/bank_card_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/bank_value"
                                style="@style/sub_titles_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[R$000,00]"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bank_see_all"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/icon_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/bank_see_all_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingEnd="5dp"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/primary" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="bottom|center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/bank_see_all_txt"
                                style="@style/main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver todos"
                                android:textColor="@color/primary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <LinearLayout
                android:id="@+id/last_transition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:text="Últimas movimentações"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/primary" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/last_transition_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/item_banco_informacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/item_banco_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/icon_bg"
                        android:scaleType="centerInside"
                        android:src="@drawable/paper_money"
                        app:tint="@color/primary" />

                    <LinearLayout
                        android:id="@+id/item_banco_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/item_banco_desc_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/item_banco_desc_nome"
                                style="@style/main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="nome"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/item_banco_desc_categoria"
                                style="@style/sub_main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="categoria"
                                android:textColor="@color/terciary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/item_banco_desc_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/item_banco_desc_data"
                                style="@style/sub_main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="dd/mm/aa"
                                android:textColor="@color/terciary" />

                            <TextView
                                android:id="@+id/item_banco_desc_horario"
                                style="@style/sub_main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:textColor="@color/terciary" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/item_banco_informacao_valores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_banco_valor"
                        style="@style/sub_titles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[R$Valor]"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/item_banco_origem"
                        style="@style/sub_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank"
                        android:textColor="@color/terciary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Conteúdo scrollável -->
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/navbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Aqui vai seu conteúdo da tela -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- ...seus cards, listas etc... -->
                </LinearLayout>
            </ScrollView>

            <!-- NAVBAR FLUTUANTE FIXA EMBAIXO -->
            <LinearLayout
                android:id="@+id/navbar"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:background="@drawable/bg_navbar"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Botão Lançar (Destaque) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_navbar"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/add_icon" />

                    <TextView
                        style="@style/main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lançar"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Outros botões -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/dashboard_icon" />

                    <TextView
                        style="@style/sub_main_text"
                        android:id="@+id/dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/goal_icon" />

                    <TextView
                        style="@style/sub_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metas"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAdicionar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ADICIONAR"
                android:backgroundTint="@color/add"
                android:textColor="@color/white" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRetirar"
