<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cartão de saldo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_top_bar"
            android:backgroundTint="@color/bg"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Header com nome do usuário e ícones -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp">

                        <!-- Saudação e nome alinhados à esquerda -->
                        <LinearLayout
                            android:id="@+id/layout_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="4dp"
                            android:layout_constraintStart_toStartOf="parent"
                            android:layout_constraintTop_toTopOf="parent"
                            android:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                android:id="@+id/txt_boas_vindas"
                                android:style="@style/Sub_TitlesTitles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Boa tarde,"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/txt_usuario"
                                style="@style/titles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[usuario]"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Ícones alinhados à direita -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="160dp"
                            app:layout_constraintStart_toEndOf="@+id/layout_user"
                            tools:layout_editor_absoluteY="9dp">

                            <ImageView
                                android:id="@+id/ivProfile"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/icon_bg"
                                android:backgroundTint="@color/secundary"
                                android:clipToOutline="true"
                                android:contentDescription="Ícone de perfil"
                                android:outlineProvider="background"
                                android:padding="10dp"
                                android:src="@drawable/profile_icon"
                                app:layout_constraintEnd_toStartOf="@+id/btnNottification"
                                tools:layout_editor_absoluteY="17dp" />

                            <ImageView
                                android:id="@+id/btnNottification"
                                android:layout_width="40dp"
                                android:layout_height="40dp"

                                android:background="@drawable/icon_bg"
                                android:contentDescription="Configurações"
                                android:padding="10dp"
                                android:src="@drawable/notification_icon"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:layout_editor_absoluteY="16dp" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- Saldo Total -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_card"
                    android:backgroundTint="@color/primary"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/infosSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" >

                        <TextView
                            style="@style/sub_titles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saldo atual"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/titles"
                            android:id="@+id/txt_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 5.000,00"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Botões dentro do cartão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Valor de entrada -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttons"
                        android:backgroundTint="@color/white_overlay"
                        android:paddingHorizontal="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttons"
                            android:backgroundTint="@color/add"
                            app:tint="@color/success"
                            android:padding="5dp"
                            android:src="@drawable/baseline_add" />

                        <Button
                            style="@style/sub_titles"
                            android:id="@+id/btnEntrada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#00FFFFFF"
                            android:text="[R$000,00]"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <!-- Botão pra alterar filtro -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttons"
                        android:backgroundTint="@color/white_overlay"
                        android:paddingHorizontal="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttons"
                            android:backgroundTint="@color/primary"
                            app:tint="@color/white"
                            android:padding="5dp"
                            android:src="@drawable/baseline_arrow_down" />


                        <Button
                            style="@style/main_text"
                            android:id="@+id/btnFiltro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:text="Última semana"
                            android:textAllCaps="false"
                            android:textColor="@color/primary" />

                    </LinearLayout>


                </LinearLayout>


                <!-- Bancos
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBancos"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>
                    -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:scrollbarTrackHorizontal="@color/primary">



                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/icon_bg"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_bg"
                            android:backgroundTint="@color/success"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/paper_money"
                                app:tint="@color/black"
                                android:layout_gravity="center"
                                android:paddingEnd="5dp"/>

                            <TextView
                                style="@style/main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dinheiro"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom|center"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp">

                            <TextView
                                style="@style/sub_titles_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[R$000,00]"
                                android:textColor="@color/black" />

                        </LinearLayout>


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/icon_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingEnd="5dp"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/primary" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="bottom|center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/main_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver todos"
                                android:textColor="@color/primary" />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

        <!-- Seção de Resumo Cripto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumo Cripto"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txt_resumo_cripto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="R$ 5.000,00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnExibirCripto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exibir"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Seção de Mercado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercado"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="2dp"
            android:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 498.269,69"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Gráfico -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/sample_graph"
                    android:scaleType="fitXY"
                    android:layout_marginTop="12dp"
                    android:contentDescription="Gráfico de mercado" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botões ADICIONAR e RETIRAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAdicionar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ADICIONAR"
                android:backgroundTint="@color/add"
                android:textColor="@color/white" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRetirar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="RETIRAR"
                android:backgroundTint="@color/remove"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
