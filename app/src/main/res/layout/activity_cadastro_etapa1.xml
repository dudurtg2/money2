<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Topo azul com botão voltar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_login"
        android:orientation="vertical"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back_light"
            android:contentDescription="Voltar" />

        <!-- Forma branca com curva -->
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/fundo_login"
            android:elevation="8dp"
            />
    </LinearLayout>

    <!-- Conteúdo abaixo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left">

            <!-- Logo -->
            <ImageView
                android:layout_width="200px"
                android:layout_height="200px"
                android:src="@drawable/money_flow_logo"
                android:tint="@color/primary"
                android:layout_marginBottom="24dp" />

            <TextView
                style="@style/Titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registre-se"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <TextView
                style="@style/Sub_Titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados pessoais"
                android:textColor="@color/primary"
                android:layout_marginBottom="40dp"/>

            <!-- Campos -->
            <EditText
                android:id="@+id/etNome"
                style="@style/Main_Text"
                android:hint="Nome"
                android:textColorHint="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:padding="20dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etSobrenome"
                style="@style/Main_Text"
                android:hint="Sobrenome"
                android:textColorHint="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:padding="20dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etCpf"
                style="@style/Main_Text"
                android:hint="CPF"
                android:textColorHint="@color/primary"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:padding="20dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etDataNascimento"
                style="@style/Main_Text"
                android:hint="Data de Nascimento"
                android:textColorHint="@color/primary"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:padding="20dp"
                android:layout_marginBottom="24dp" />

            <!-- Botão Próximo -->
            <Button
                style="@style/Sub_Titles"
                android:id="@+id/btnProximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Próximo"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:padding="20dp"
                android:background="@drawable/buttons"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

