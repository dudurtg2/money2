<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:cardBackgroundColor="#F2F2F2"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <!-- Botão de voltar -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/primary"
                android:contentDescription="Voltar"
                android:padding="6dp"
                android:src="@drawable/back_icon_blue_1" />

            <!-- Título centralizado -->
            <TextView
                android:id="@+id/txtTitulo"
                style="@style/Titles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Notificações"
                android:textColor="#0047FF" />

            <!-- View invisível pra equilibrar -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="173dp"
        android:layout_height="69dp"
        android:contentDescription="Nuvem azul"
        android:src="@drawable/cloud_noti_icon"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="261dp" />

    <ImageView
        android:id="@+id/cloud2"
        android:layout_width="188dp"
        android:layout_height="79dp"
        android:contentDescription="Nuvem azul"
        android:src="@drawable/cloud_noti_icon"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="411dp" />

    <TextView
        android:id="@+id/txtNenhumaAtualizacao"
        style="@style/Main_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nenhuma \n atualização:("
        android:textAlignment="center"
        android:textColor="#C0C0C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cloud1" />

</androidx.constraintlayout.widget.ConstraintLayout>
